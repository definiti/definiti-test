package x

verification IsNonEmpty {
  "The option should not be empty"
  [A](option: Option[A]) => {
    option.nonEmpty
  }
}

context tests {{{
  test verification IsNonEmpty {
    accept Option[Option[String]](Option[String](""))
    refuse Option[List[Number]](List[Number](1, 2, 3))
    refuse Option[Option[Number]](Option[Number]())
  }
}}}