package x

verification IsNonEmpty {
  "The option should not be empty"
  [A](option: Option[A]) => {
    option.nonEmpty
  }
}

context tests {{{
  test verification IsNonEmpty {
    accept Option[Option[String]](Option[Number](1))
    accept Option[Option[String]](Option[String](1))
    refuse Option[List[Number]](List[String](""))
    refuse Option[List[Number]](List[Number](""))
  }
}}}