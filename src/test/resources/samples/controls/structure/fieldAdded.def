package x

type Person {
  firstName: String
  lastName: String
}

verification IsValidPerson {
  "The person should be valid"
  (person: Person) => {
    person.firstName.nonEmpty() && person.lastName.nonEmpty()
  }
}

context tests {{{
  test verification IsValidPerson {
    accept Person {
      firstName: "First"
      lastName: "Last"
      another: "Another"
    }

    refuse Person {
      firstName: "Some"
      lastName: "Thing"
      undefined: "Undefined"
    }
  }
}}}