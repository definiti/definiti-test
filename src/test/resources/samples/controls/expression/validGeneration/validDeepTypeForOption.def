package x

verification IsNonEmpty {
  "The option should not be empty"
  [A](option: Option[A]) => {
    option.nonEmpty
  }
}

context tests {{{
  test verification IsNonEmpty {
    accept some[Option[String]](some[String](""))
    refuse some[List[Number]](List[Number](1, 2, 3))
    refuse some[Option[Number]](none[Number]())
  }
}}}